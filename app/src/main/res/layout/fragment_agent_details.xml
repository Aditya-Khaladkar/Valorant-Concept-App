<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".view.ui.AgentDetails">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:id="@+id/dAgentName"
           android:layout_margin="20dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GEKKO"
           android:textColor="@color/white"
           android:fontFamily="@font/russooneregular"
           android:textSize="25sp"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="450dp">

           <ImageView
               android:id="@+id/dimgAgentBg"
               android:alpha="0.1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/dashboard_bg"/>

           <ImageView
               android:id="@+id/dimgAgentImage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/gekko_bg"/>

       </RelativeLayout>

       <TextView
           android:layout_margin="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Skills"
           android:textColor="@color/white"
           android:textSize="17sp"
           android:fontFamily="@font/russooneregular"/>

       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/dAgentSkill1"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:src="@drawable/skills_img"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:src="@drawable/skills_img"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:src="@drawable/skills_img"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:src="@drawable/skills_img"/>

       </LinearLayout>

       <View
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="@color/app_theme"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="BIOGRAPHY"
           android:textColor="@color/app_theme"
           android:layout_margin="20dp"
           android:textSize="17sp"
           android:fontFamily="@font/russooneregular"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="BIOGRAPHY"
           android:textColor="@color/white"
           android:layout_marginStart="20dp"
           android:fontFamily="@font/russooneregular"/>

   </LinearLayout>

</ScrollView>